@TopComponent.OpenActionRegistration(displayName = "#CTL_EventsAction",
preferredID = "EventsViewerTopComponent")
@Messages({
    "CTL_EventsAction=EventsViewer",
    "CTL_EventsTopComponent=Events Viewer",
    "HINT_EventsTopComponent=This is an Events Viewer window"
})
public final class EventsViewerTopComponent extends TopComponent implements
        PropertyChangeListener, ExplorerManager.Provider, LookupListener {

    private final ExplorerManager em = new ExplorerManager();
    private final Lookup lookup;
    private FamilyTreeManager ftm;
    private Lookup.Result<Node> result;
    private static final Logger logger = Logger.getLogger(EventsViewerTopComponent.class.getName());

    public EventsViewerTopComponent() {
        initComponents();
        setName(Bundle.CTL_EventsTopComponent());
        setToolTipText(Bundle.HINT_EventsTopComponent());
        setLayout(new BorderLayout());
        BeanTreeView btv = new BeanTreeView();
        btv.setRootVisible(true);
        add(btv, BorderLayout.CENTER);

        ActionMap map = this.getActionMap();
        // associates the key 'delete' with the delete action
        map.put(DeleteNodeAction.ACTION_MAP_DELETE_KEY, ExplorerUtils.actionDelete(em, true));
        this.lookup = ExplorerUtils.createLookup(this.em, map);
        this.associateLookup(lookup);

        EventRootNode node = new EventRootNode();
        em.setRootContext(node);
    }

