autostore = false)
@TopComponent.Description(preferredID = "EventsViewerTopComponent",
iconBase = "com/asgteach/familytree/utilities/eventIcon.png",
persistenceType = TopComponent.PERSISTENCE_ALWAYS)
@TopComponent.Registration(mode = "explorer", openAtStartup = true)
@ActionID(category = "Window", id = "com.asgteach.familytree.eventsviewer.EventsViewerTopComponent")
@ActionReference(path = "Menu/Window" /*
